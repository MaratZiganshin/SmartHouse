<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marat.smarthouse.DeviceAdd">
    <TextView
        android:id = "@+id/about_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text = "Выберите устройство"/>
    <Spinner android:layout_width="match_parent" android:layout_below="@id/about_device"

        android:id = "@+id/choose_device"
        android:layout_height="wrap_content"
        android:background="@drawable/room_button"
        android:layout_margin="20dp"
        android:minHeight="40dp">

    </Spinner>

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigButtonSize"
        android:layout_gravity="bottom"
        android:background="@drawable/big_button"
        android:text="Добавить"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
