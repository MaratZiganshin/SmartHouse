<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marat.smarthouse.RGB">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id = "@+id/color_example"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@id/color_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/about_red"
        android:text = "Red"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <SeekBar
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:thumb = "@drawable/thumb_red"
        android:max="255"
        android:id = "@+id/red_bar"
        android:layout_below="@id/about_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/red_bar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/about_green"
        android:text = "Green"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <SeekBar
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:thumb = "@drawable/thumb_green"
        android:max="255"
        android:id = "@+id/green_bar"
        android:layout_below="@id/about_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/green_bar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/about_blue"
        android:text = "Blue"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <SeekBar
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:thumb = "@drawable/thumb_blue"
        android:max="255"
        android:id = "@+id/blue_bar"
        android:layout_below="@id/about_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Switch
        android:text="Off/On "
        android:textSize="20dp"
        android:id = "@+id/on_rgb"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blue_bar"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_margin="20dp"
        android:id="@+id/change_rgb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigButtonSize"
        android:layout_gravity="bottom"
        android:background="@drawable/big_button"
        android:text="Изменить"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
